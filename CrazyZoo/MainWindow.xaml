<Window x:Class="CrazyZoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crazy Zoo — MVVM" Height="560" Width="920">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="Loomad" FontWeight="Bold" Margin="0 0 0 8"/>
            <ListBox ItemsSource="{Binding Animals}"
                     SelectedItem="{Binding SelectedAnimal}"
                     DisplayMemberPath="Name"
                     Height="380"/>
            <StackPanel Orientation="Horizontal" Margin="0 8 0 0">
                <Button Content="Lisa" Width="110" Command="{Binding AddCmd}" Margin="0 0 8 0"/>
                <Button Content="Eemalda" Width="110" Command="{Binding RemoveCmd}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="16 0 16 0">
            <TextBlock Text="Detailid" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedAnimal.Describe()}" Margin="0 6 0 12"/>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                <Button Content="Tee hääl" Width="110" Command="{Binding MakeSoundCmd}" Margin="0 0 8 0"/>
                <Button Content="Crazy action" Width="110" Command="{Binding CrazyCmd}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBox Width="220" Margin="0 0 8 0"
                         Text="{Binding FoodInput, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Toida (seq)" Width="120" Command="{Binding DropFoodCmd}"/>
            </StackPanel>

            <TextBlock Text="Logi" FontWeight="Bold" Margin="0 12 0 6"/>
            <ListBox ItemsSource="{Binding Log}" Height="300"/>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock Text="Statistika (LINQ)" FontWeight="Bold" Margin="0 0 0 8"/>
            <ItemsControl ItemsSource="{Binding StatsLines}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="0 2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="CrazyZoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crazy Zoo" Height="520" Width="860">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="Loomad" FontWeight="Bold" Margin="0 0 0 8"/>
            <ListBox x:Name="AnimalList"
                     DisplayMemberPath="Name"
                     Height="360"
                     SelectionChanged="AnimalList_SelectionChanged"/>
            <StackPanel Orientation="Horizontal" Margin="0 8 0 0">
                <Button Content="Lisa loom" Width="110" Click="Add_Click" Margin="0 0 8 0"/>
                <Button Content="Eemalda loom" Width="110" Click="Remove_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="16 0 0 0">
            <TextBlock Text="Detailid" FontWeight="Bold"/>
            <TextBlock x:Name="DetailsText" Margin="0 6 0 12"/>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                <Button Content="Tee hääl" Width="110" Click="MakeSound_Click" Margin="0 0 8 0"/>
                <Button Content="Crazy action" Width="110" Click="Crazy_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="FoodBox" Width="220" Margin="0 0 8 0"/>
                <Button Content="Toida" Width="90" Click="Feed_Click"/>
            </StackPanel>

            <TextBlock Text="Logi" FontWeight="Bold" Margin="0 12 0 6"/>
            <ListBox x:Name="LogList" Height="280"/>
        </StackPanel>
    </Grid>
</Window>

